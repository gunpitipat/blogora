{
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { "distDir": "dist" } 
    }
  ],
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://blogora-proxy.vercel.app/api/:path*" 
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}